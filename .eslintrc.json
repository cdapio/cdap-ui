{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "spread": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "node/no-missing-require": ["warn", {
      "allowModules": [],
      "resolvePaths": ["/app"],
      "tryExtensions": [".js", ".json", ".ts", ".tsx", ".jsx"]
    }],
    "@typescript-eslint/prefer-optional-chain": "error",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-implicit-any-catch": "off",
    "react/prop-types": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-missing-import": "off",
    "react/no-deprecated": "off"
  },
  "globals": {
    "angular": false,
    "PKG": true,
    "getAbsUIUrl": true,
    "_": true,
    "describe": true,
    "jasmine": true,
    "it": true,
    "expect": true,
    "jest": true,
    "beforeEach": true,
    "afterEach": true,
    "avsc": true
  },
  "plugins": [
    "react",
    "babel",
    "prettier",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "./node_modules/gts/"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx", ".js", ".jsx"]
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
